<%= div_for comment do %>
    <p>
        <strong>
            Posted <%= time_ago_in_words(comment.created_at) %> ago
        </strong>
        <%= button_to [@user, @post, comment], remote: true,
          method: :delete, class: 'btn btn-xs' do %>
          <span class="glyphicon glyphicon-remove"></span>
        <% end %>
        <br/>
        <%= comment.body %>
    </p>
<% end %>
